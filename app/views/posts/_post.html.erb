<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

<% if post.image.present? %>
    <%= image_tag(post.image, class: "image") %>
  <% else %>
    <!-- Display a default image or a placeholder if post.image is empty -->
    <%= image_tag("data:image/png;base64,", class: "image") %>
  <% end %>
  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

</div>
